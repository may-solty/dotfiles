root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.ctp]
indent_size = 2

[*.{rb,erb,slim}]
indent_size = 2

[*.{html,css,scss,js,coffee}]
indent_size = 2

[*.{yml,json}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
